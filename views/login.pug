  body
   .container
     h1.jumbotron.text-center Login Form
     .row
       .col.md-6
            form(method="post", action="/login/user")
              .form-group
                 label Email
                 input.form-control(type="text", name="email", placeholder="email")
              .form-group
                 lable Password 
                 input.form-control(type="text", name="password", placeholder="password")
                 button.btn.btn-success(type="submit") Login
              


